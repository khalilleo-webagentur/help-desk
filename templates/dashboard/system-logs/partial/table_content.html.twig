{% set isAdmin = is_granted('ROLE_SUPER_ADMIN') %}

{% if isAdmin %}

    <div class="card-body table-responsive bg-white p-0 mb-3">
        <table class="table table-hover text-nowrap">
            <thead>
            <tr class="fs-14">
                <th>{{ 'ID'|trans }}</th>
                <th>{{ 'Exception'|trans }}</th>
                <th>{{ 'Occured'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for row in systemLogs %}
                <tr class="fs-14">
                    <td>{{ row.id }}</td>
                    <td>
                        <code class="cursor-help fs-14" title="{{ row.message }}">
                            {{ row.message|slice(0, 70) ~ ' ..' }}
                        </code>
                    </td>
                    <td title="{{ row.createdAt|date }}">{{ timeAgo(row.createdAt) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}