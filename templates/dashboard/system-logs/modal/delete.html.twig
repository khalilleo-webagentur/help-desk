<div class="modal fade" id="deleteToolModal" tabindex="-1" role="dialog" aria-labelledby="deleteToolModalTitle"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form action="{{ path('app_dashboard_system_logs_filter_delete') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteToolModalTitle">
                        Filter Delete Logs
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-light">

                    <div class="modal-danger">
                        After submitting the Form, all Logs between Date-From and Date-To will be deleted permanently.
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            {% set hashId = hash() %}
                            <label for="{{ hashId }}" class="form-label">
                                Date from  <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control datetimeSelectorFrom"
                                   id="{{ hashId }}"
                                   placeholder="{{ dateTimeFrom }}" name="dateFrom"
                                   style="background: #fff !important;"
                                   value="{{ dateTimeFrom }}">
                        </div>
                        <div class="col-lg-6">
                            {% set hashId = hash() %}
                            <label for="{{ hashId }}" class="form-label">
                                Date to <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control datetimeSelectorTo" id="{{ hashId }}"
                                   placeholder="{{ dateTimeTo }}"
                                   style="background: #fff !important;"
                                   value="{{ dateTimeTo }}" name="dateTo">
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>