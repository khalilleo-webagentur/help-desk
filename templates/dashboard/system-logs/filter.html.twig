{% extends 'dashboard/layout/base.html.twig' %}

{% block title %} Dashboard System-Logs Filter {% endblock %}

{% block body %}

    <div class="content-wrapper">

        <div class="content-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-8 mt-1">
                        <h5 class="m-0 text-dark mt-1">System-Logs Filter</h5>
                    </div>
                    <div class="col-4 mt-1">
                        <div class="breadcrumb float-right">
                            <a href="{{ path('app_dashboard_system_logs_index') }}" class="text-secondary">
                                Close <span class="fa fa-window-close"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">

            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <div class="container-fluid area-section mb-1">
                    <div class="row px-3 pt-3">
                        <div class="col-lg-12">
                            <p class="{{ count(systemLogs) > 0 ? 'modal-info' : 'modal-warning' }}">
                                Filter Criteria: <br>
                                <small><strong>Datetime from:</strong> {{ datetimeFrom }}</small><br>
                                <small><strong>Datetime to:</strong> {{ datetimeTo }}</small><br>
                                <small><strong>Event Type:</strong> {{ event ? event : 'All' }}</small>
                            </p>
                            <p>Filter results found
                                <q>{{ count(systemLogs) }}</q> {{ count(systemLogs) > 0 ? 'entries' : 'entry' }}.
                            </p>

                            {% include 'dashboard/system-logs/partial/table_content.html.twig' %}
                        </div>
                    </div>
                </div>

                <div class="container-fluid mb-4 mt-2">
                    <div class="row">
                        <div class="col-lg-12">
                            <a href="{{ path('app_dashboard_system_logs_index') }}">
                                Clear System-Logs filter
                                <span class="fa fa-window-close"></span>
                            </a>
                        </div>
                    </div>
                </div>
            {% endif %}

        </section>
    </div>

{% endblock %}