{% set isAdmin = is_granted('ROLE_SUPER_ADMIN') %}

{% if isAdmin %}

    <div class="card-body table-responsive bg-white p-0 mb-3">
        <table class="table table-hover text-nowrap">
            <thead>
            <tr class="fs-14">
                <th>{{ 'ID'|trans }}</th>
                <th>{{ 'User'|trans }}</th>
                <th>{{ 'TicketCloseNotification'|trans }}</th>
                <th>{{ 'Modified'|trans }}</th>
                <th>{{ 'Created'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for row in settings %}
                <tr class="fs-14">
                    <td>{{ row.id }}</td>
                    <td>
                        <form class="pointer text-primary"
                              onclick="this.closest('form').submit();"
                              action="{{ path('app_dashboard_user_edit', {id:row.user.id}) }}"
                              method="post">
                            <input type="hidden" name="csrf" value="{{ hash(csrf_token(row.user.id)) }}">
                            {{ row.user.name }}
                        </form>
                    </td>
                    <td>
                        {% include 'dashboard/component/toggle_flag.html.twig'
                            with {
                                flag:row.notifyCloseTicket,
                                actionRoute: 'app_dashboard_settings_store',
                                title: 'An E-mail will be sent to user directly if the status of ticket updated to Resolved or to Closed.'
                            }
                        %}
                    </td>
                    <td title="{{ row.updatedAt|date }}">{{ timeAgo(row.updatedAt) }}</td>
                    <td title="{{ row.createdAt|date }}">{{ timeAgo(row.createdAt) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endif %}