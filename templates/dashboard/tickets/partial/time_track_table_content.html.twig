{% if count(issue.timetracks) > 0 %}
    <div class="card-body table-responsive bg-white p-0 by-3">
        <table class="table table-hover table-sm">
            <thead>
            <tr class="fs-14 text-nowrap">
                <th>{{ 'User'|trans }}</th>
                <th>{{ 'Minutes'|trans }}</th>
                <th>{{ 'Note'|trans }}</th>
                <th>{{ 'Date-Logged'|trans }}</th>
                <th>{{ 'Action'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for timetrack in issue.timetracks %}
                <tr class="fs-14 text-nowrap">
                    <td>
                        <a href="{{ path('app_dashboard_user_edit', {id:timetrack.user.id}) }}">
                            {{ timetrack.user.name }}
                        </a>
                    </td>
                    <td>{{ timetrack.minutes > 0 ? convertToHoursMinutes(timetrack.minutes) : '00:00' }}</td>
                    <td>
                        {{ timetrack.note }}
                        {% include 'dashboard/component/copy_to_clipboard.html.twig' with{content:timetrack.note} %}
                    </td>
                    <td title="{{ timetrack.createdAt|date }}">{{ timeAgo(timetrack.createdAt) }}</td>
                    <td>
                        <button class="btn btn-light btn-sm mr-2"
                                data-toggle="modal"
                                data-target="#timeTrackModal{{ timetrack.id }}">
                            <span class="fa fa-edit text-light-25 fa-xs"></span>
                            <small class="text-light-25">EDIT</small>
                        </button>
                        <button class="btn btn-light btn-sm"
                                data-toggle="modal"
                                data-target="#deleteTimeTrackModal{{ timetrack.id }}">
                            <span class="fa fa-trash text-light-25 fa-xs"></span>
                            <small class="text-light-25">DELETE</small>
                        </button>
                    </td>
                </tr>
                {% include 'dashboard/tickets/modal/time-track/edit.html.twig' with{
                    timetrack: timetrack,
                    projectId: issue.project.id
                } %}
                {% include 'dashboard/tickets/modal/time-track/delete.html.twig' with{
                    timetrack: timetrack,
                    projectId: issue.project.id
                } %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <p class="fs-14 text-secondary">
        Time tracking is not available for this issue.
    </p>
{% endif %}
