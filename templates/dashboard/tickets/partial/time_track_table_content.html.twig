{% if count(issue.timetracks) > 0 %}
    {% if totalTimeTrack > 0 %}
        <p class="fs-14 mt-3 text-secondary">
            Total time tracked for this issue: <i>{{ convertToHoursMinutes(totalTimeTrack) }}.</i>
            {% include 'dashboard/component/popover_info.html.twig' with{
                content: 'The Note entered for time spent will be included as a line item in the invoice later.'
            } %}
        </p>
    {% endif %}
    <div class="card-body table-responsive bg-white p-0 by-3">
        <table class="table table-hover table-sm text-nowrap">
            <thead>
            <tr class="fs-14">
                <th>{{ 'User'|trans }}</th>
                <th>{{ 'Minutes'|trans }}</th>
                <th>{{ 'Note'|trans }}</th>
                <th>{{ 'Date-Logged'|trans }}</th>
                <th>{{ 'Action'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for timetrack in issue.timetracks %}
                <tr class="fs-14">
                    <td>
                        <a href="{{ path('app_dashboard_user_edit', {id:timetrack.user.id}) }}">
                            {{ timetrack.user.name }}
                        </a>
                    </td>
                    <td>{{ timetrack.minutes > 0 ? convertToHoursMinutes(timetrack.minutes) : '00:00' }}</td>
                    <td>
                        {{ timetrack.note }}
                        {% include 'dashboard/component/copy_to_clipboard.html.twig' with{content:timetrack.note} %}
                    </td>
                    <td title="{{ timetrack.createdAt|date }}">{{ timeAgo(timetrack.createdAt) }}</td>
                    <td>
                        <form action="{{ path('app_dashboard_ticket_time_track_delete', {hash:hash(issue.id)}) }}"
                              method="post">
                            <button class="btn btn-light btn-sm" type="submit"
                                    title="Permanently delete the logged time! This action cannot be undone and will not prompt a confirmation modal.">
                                <span class="fa fa-trash text-light-25 fa-xs"></span>
                                <small class="text-light-25">DELETE</small>
                                <input type="hidden" name="id" value="{{ issue.id }}">
                                <input type="hidden" name="pid" value="{{ issue.project.id }}">
                                <input type="hidden" name="tId" value="{{ timetrack.id }}">
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <p class="fs-14 text-secondary">
        Time tracking is not available for this issue at this time.
    </p>
{% endif %}
