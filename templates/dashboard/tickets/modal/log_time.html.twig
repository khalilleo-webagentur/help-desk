<div class="modal fade" id="logTimeModal" tabindex="-1" role="dialog" aria-labelledby="logTimeModalTitle"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form action="{{ path('app_dashboard_ticket_log_time_store', {id:issue.id}) }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logTimeModalTitle">
                        Log spent time
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-light">
                    <div class="mb-2">
                        <label for="iO7nMi" class="form-label">
                            Log Time <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" id="iO7nMi" placeholder="Time in minutes"
                               name="iO7nMi"
                               autofocus
                               required>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-primary">Log time</button>
                    <input type="hidden" name="pid" value="{{ issue.project.id }}">
                </div>
            </div>
        </form>
    </div>
</div>