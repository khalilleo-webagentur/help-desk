<div class="modal fade" id="changeStatusModal" tabindex="-1" role="dialog" aria-labelledby="changeStatusModalTitle"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form action="{{ path('app_dashboard_ticket_store_issue_status', {id:issue.id}) }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="changeStatusModalTitle">
                        Change Issue Status
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-light">

                    <div class="form-group">
                        <label for="iO7nM4yT4bG2sO77">
                            Status <span class="text-danger">*</span>
                        </label>
                        <select class="form-control" name="MliO7nMi" id="iO7nM4yT4bG2sO77" required>
                            {% set hasStatus = issue.status and issue.status.name %}
                            {% for status in statuses %}
                                <option value="{{ status.id }}" {{ hasStatus and status.name == issue.status.name ? 'selected' : '' }}>
                                    {{ status.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-primary">Change status</button>
                    <input type="hidden" name="pid" value="{{ issue.project.id }}">
                </div>
            </div>
        </form>
    </div>
</div>