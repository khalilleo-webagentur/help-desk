<div class="modal fade" id="filterTicketModal" tabindex="-1" role="dialog" aria-labelledby="filterTicketModalTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <form action="{{ path('app_dashboard_ticket_new') }}" method="post" enctype="multipart/form-data">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="filterTicketModalTitle">
                        Filter
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-light">

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="iO7nM4yT4bG2sO00">
                                    Project <span class="text-danger">*</span>
                                </label>
                                <select class="form-control" name="project" id="iO7nM4yT4bG2sO00">
                                    <option value="0" selected disabled>Select Project</option>
                                    {% for project in projects %}
                                        <option value="{{ project.id }}">{{ project.title }} ({{ project.customer.name }})</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="iO7nM4yT4bG2sO00">Customer</label>
                                <select class="form-control" name="project" id="iO7nM4yT4bG2sO00">
                                    <option value="0" selected disabled>Select Project</option>
                                    {% for project in projects %}
                                        <option value="{{ project.id }}">{{ project.title }} ({{ project.customer.name }})</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="iO7nM4yT4bG2sO22">Type</label>
                                <select class="form-control" name="type" id="iO7nM4yT4bG2sO22">
                                    {% for type in ticketTypes %}
                                        <option value="{{ type.id }}">{{ type.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="iO7nM4yT4bG2sO55">Labels</label>
                                    <select class="form-control" name="label" id="iO7nM4yT4bG2sO55">
                                        <option value="0" selected disabled>Select Label</option>
                                        {% for label in ticketLabels %}
                                            <option value="{{ label.id }}">{{ label.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="iO7nM4yT4bG2sO44">
                                        Assignee
                                    </label>
                                    <select class="form-control" name="assignee" id="iO7nM4yT4bG2sO44">
                                        <option value="0" selected>Unassigned</option>
                                        {% for user in users %}
                                            <option value="{{ user.id }}">{{ user.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>

                    <div class="row">
                        <div class="col-lg-3">
                        <div class="mb-3">
                                    <label for="V9xO3aD7v78" class="form-label">Ticket-No</label>
                                    <input type="text" class="form-control" id="V9xO3aD7v78"
                                    placeholder="" name="no">
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="mb-3">
                                <label for="V9xO3aD7v78" class="form-label">Title</label>
                                <input type="text" class="form-control" id="V9xO3aD7v78"
                                       placeholder=""
                                       value="" name="title">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-3">
                            <div class="mb-3">
                                <label for="V9xO3aD7v78" class="form-label">Date from</label>
                                <input type="text" class="form-control" id="V9xO3aD7v78"
                                       placeholder="" name="no">
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="mb-3">
                                <label for="V9xO3aD7v78" class="form-label">Date to</label>
                                <input type="text" class="form-control" id="V9xO3aD7v78"
                                       placeholder=""
                                       value="" name="title">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel
                    </button>
                    <button type="submit" class="btn btn-outline-primary">
                        Submit
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>