<div class="modal fade" id="filterTicketModal" tabindex="-1" role="dialog" aria-labelledby="filterTicketModalTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form action="{{ path('app_dashboard_ticket_filter') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="filterTicketModalTitle">
                        Filter Issues
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-light">

                    <div class="row">

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="n9w9b5a2">Company <span class="text-danger">*</span></label>
                                <select class="form-control" name="n9w9b5a2" id="n9w9b5a2">
                                    <option value="0" disabled selected>Select Company</option>
                                    {% for company in companies %}
                                        <option value="{{ company.id }}">{{ company.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="iO7nM4yT4bG2sO00">
                                    Project <span class="text-danger">*</span>
                                </label>
                                <select class="form-control" name="i5x5y0k6" id="iO7nM4yT4bG2sO00">
                                    <option value="0" disabled selected>Select Project</option>
                                    {% for project in projects %}
                                        <option value="{{ project.id }}">
                                            {{ project.title }} ({{ project.company.name }})
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="iO7nM4yT4bG2sO55">Labels</label>
                                <select class="form-control" name="k8b7d6z0" id="iO7nM4yT4bG2sO55">
                                    <option value="0" disabled selected>Select Label</option>
                                    {% for label in ticketLabels %}
                                        <option value="{{ label.id }}">{{ label.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="iO7nM4yT4bG2sO44">
                                    Status
                                </label>
                                <select class="form-control" name="v4b6v7u1" id="iO7nM4yT4bG2sO44">
                                    <option value="0" disabled selected>Select status</option>
                                    {% for status in statuses %}
                                        <option value="{{ status.id }}">{{ status.name|capitalize }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="PP7nM4yT4bG2sO44">Priority</label>
                                <select class="form-control" name="pT4bG2sO" id="PP7nM4yT4bG2sO44">
                                    <option value="0">Select priority</option>
                                    {% for priority in ticketPriorities %}
                                        <option value="{{ priority.id }}">
                                            {{ priority.name }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="mb-3">
                                    <label for="m79xO" class="form-label">Assignee</label>
                                    <input type="text" class="form-control" id="m79xO"
                                           placeholder="Name" name="n7m2r3m5">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label for="V9xO3aD7v78Ticket" class="form-label">Ticket-No</label>
                                <input type="text" class="form-control" id="V9xO3aD7v78Ticket"
                                       placeholder="Ticket no" name="f6a0f1i8">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="mb-3">
                                    <label for="k4j0e2k9" class="form-label">Issue created By</label>
                                    <input type="text" class="form-control" id="k4j0e2k9"
                                           placeholder="Name" name="k4j0e2k9">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-3">
                                <label for="V9xO3aD7v78Title" class="form-label">Title</label>
                                <input type="text" class="form-control" id="V9xO3aD7v78Title"
                                       placeholder="Title keyword"
                                       name="e2j0m2m5">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="bQ0dN1dZ"
                                       name="bQ0dN1dZ">
                                <label class="form-check-label text-secondary" for="bQ0dN1dZ">
                                    Only Issues that has been linked to another Issues
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="V9xO3aD7v78dateTimeFrom" class="form-label">Date from</label>
                                <input type="text" class="form-control datetimeSelectorFrom"
                                       id="V9xO3aD7v78dateTimeFrom"
                                       placeholder="{{ dateTimeFrom }}" name="o2o0b4t1"
                                       style="background: #fff !important;"
                                       value="{{ dateTimeFrom }}">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label for="V9xO3aD7v78dateTimeTo" class="form-label">Date to</label>
                                <input type="text" class="form-control datetimeSelectorTo" id="V9xO3aD7v78dateTimeTo"
                                       placeholder="{{ dateTimeTo }}"
                                       style="background: #fff !important;"
                                       value="{{ dateTimeTo }}" name="a1n3m1j2">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-outline-primary">
                        Apply
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>