                                    <option value="0" disabled selected>Select Project</option>
                                    {% for project in projects %}
                                        <option value="{{ project.id }}">
                                            {{ project.title }} ({{ project.company.name }})
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="iO7nM4yT4bG2sO55">Labels</label>
                                <select class="form-control" name="nM4yT4" id="iO7nM4yT4bG2sO55">
                                    <option value="0" disabled selected>Select Label</option>
                                    {% for label in ticketLabels %}
                                        <option value="{{ label.id }}">{{ label.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="iO7nM4yT4bG2sO44">
                                    Status
                                </label>
                                <select class="form-control" name="iO7nM4yT4" id="iO7nM4yT4bG2sO44">
                                    <option value="0" disabled selected>Select status</option>
                                    {% for status in statuses %}
                                        <option value="{{ status.id }}">{{ status.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="mb-3">
                                    <label for="V9xO" class="form-label">Issue By</label>
                                    <input type="text" class="form-control" id="V9xO"
                                           placeholder="Name" name="V9xO">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="mb-3">
                                    <label for="m79xO" class="form-label">Assignee</label>
                                    <input type="text" class="form-control" id="m79xO"
                                           placeholder="Name" name="m79xzO">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-3">
                            <div class="mb-3">
                                <label for="V9xO3aD7v78Ticket" class="form-label">Ticket-No</label>
                                <input type="text" class="form-control" id="V9xO3aD7v78Ticket"
                                       placeholder="Ticket no" name="3aD7v78Tic">
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="mb-3">
                                <label for="V9xO3aD7v78Title" class="form-label">Title</label>
                                <input type="text" class="form-control" id="V9xO3aD7v78Title"
                                       placeholder="Title keyword"
                                       name="aD7v78Ti">
