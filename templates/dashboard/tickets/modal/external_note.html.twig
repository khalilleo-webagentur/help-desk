<div class="modal fade" id="externalNoteModal" tabindex="-1" role="dialog" aria-labelledby="externalNoteModalTitle"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form action="{{ path('app_dashboard_ticket_store_external_note', {id:issue.id}) }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="externalNoteModalTitle">
                        Note Related to Issue
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-light">

                    <div class="modal-info">
                        All your company users can edit and delete Note.
                    </div>

                    <div class="mb-2">
                        <label for="iO7nMiNot" class="form-label">
                            Note <span class="text-danger">*</span>
                        </label>
                        <textarea class="form-control" id="iO7nMiNot" placeholder="Type your note .." rows="4"
                                  name="note"
                                  spellcheck="false"
                                  ondragstart="return false"
                                  ondrop="return false"
                                  dir="auto"
                                  autocapitalize="off"
                                  autocomplete="off"
                                  translate="no"
                                  required>{{ issue.externalNote }}</textarea>
                        <small class="text-secondary">This field is required.</small>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-primary">Save</button>
                    <input type="hidden" name="pid" value="{{ issue.project.id }}">
                </div>
            </div>
        </form>
    </div>
</div>