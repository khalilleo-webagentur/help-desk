<div class="modal fade" id="filterNotesModal" tabindex="-1" role="dialog" aria-labelledby="filterNotesModalTitle"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form action="{{ path('app_dashboard_ticket_filter_notes') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="filterNotesModalTitle">
                        Filter Notes
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-light">

                    <div class="row">
                        <div class="col-lg-12">
                            {% set hashId = hash() %}
                            <div class="form-group">
                                <label for="{{ hashId }}">Company <span class="text-danger">*</span></label>
                                <select class="form-control" name="company" id="{{ hashId }}">
                                    <option value="0" disabled selected>Select Company</option>
                                    {% for company in companies %}
                                        <option value="{{ company.id }}">{{ company.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                {% set hashId = hash() %}
                                <label for="{{ hashId }}" class="form-label">Note</label>
                                <input type="text" class="form-control" id="{{ hashId }}"
                                       placeholder="Note keyword" name="note">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            {% set hashId = hash() %}
                            <label for="{{ hashId }}" class="form-label">
                                Date from <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control datetimeSelectorFrom"
                                   id="{{ hashId }}"
                                   placeholder="{{ dateTimeFrom }}" name="dateFrom"
                                   style="background: #fff !important;"
                                   value="{{ dateTimeFrom }}">
                        </div>
                        <div class="col-lg-6">
                            {% set hashId = hash() %}
                            <label for="{{ hashId }}" class="form-label">
                                Date to <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control datetimeSelectorTo" id="{{ hashId }}"
                                   placeholder="{{ dateTimeTo }}"
                                   style="background: #fff !important;"
                                   value="{{ dateTimeTo }}" name="dateTo">
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-lg-12">
                            {% include 'dashboard/component/field/checkbox.html.twig' with{
                                label: 'Issue that has an internal note',
                                checked: true,
                                name: 'iNote'
                            } %}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            {% include 'dashboard/component/field/checkbox.html.twig' with{
                                label: 'Issue that has an external note',
                                name: 'eNote'
                            } %}
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-outline-primary">
                        Apply
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>