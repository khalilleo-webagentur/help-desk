<div class="modal fade" id="filterAttachmentsModal" tabindex="-1" role="dialog"
     aria-labelledby="filterAttachmentsModalTitle"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form action="{{ path('app_dashboard_ticket_filter_attachments') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="filterAttachmentsModalTitle">
                        Filter Attachments
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-light">

                    <div class="row">
                        <div class="col-lg-8">
                            {% set hashId = hash() %}
                            <div class="form-group">
                                <label for="{{ hashId }}" class="form-label">Name</label>
                                <input type="text" class="form-control" id="{{ hashId }}"
                                       placeholder="Name of file" name="name">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            {% set hashId = hash() %}
                            <label for="{{ hashId }}" class="form-label">User-ID</label>
                            <input type="text" class="form-control" id="{{ hashId }}"
                                   placeholder="i.e 7" name="uId">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                {% set hashId = hash() %}
                                <label for="{{ hashId }}" class="form-label">Type</label>
                                <input type="text" class="form-control" id="{{ hashId }}"
                                       placeholder="i.e PNG" name="type">
                            </div>
                        </div>
                        <div class="col-lg-8">
                            {% set hashId = hash() %}
                            <label for="{{ hashId }}" class="form-label">File-No</label>
                            <input type="text" class="form-control" id="{{ hashId }}"
                                   placeholder="Attachment no" name="fileNo">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            {% set hashId = hash() %}
                            <label for="{{ hashId }}" class="form-label">Date from</label>
                            <input type="text" class="form-control datetimeSelectorFrom"
                                   id="{{ hashId }}"
                                   placeholder="{{ dateTimeFrom }}" name="dateFrom"
                                   style="background: #fff !important;"
                                   value="{{ dateTimeFrom }}">
                        </div>
                        <div class="col-lg-6">
                            {% set hashId = hash() %}
                            <label for="{{ hashId }}" class="form-label">Date to</label>
                            <input type="text" class="form-control datetimeSelectorTo" id="{{ hashId }}"
                                   placeholder="{{ dateTimeTo }}"
                                   style="background: #fff !important;"
                                   value="{{ dateTimeTo }}" name="dateTo">
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-outline-primary">
                        Apply
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>