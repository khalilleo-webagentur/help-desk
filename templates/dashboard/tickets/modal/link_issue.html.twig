<div class="modal fade" id="linkIssueModal" tabindex="-1" role="dialog" aria-labelledby="linkIssueModalTitle"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form action="{{ path('app_dashboard_ticket_link_to_store', {id:issue.id}) }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="linkIssueModalTitle">
                        Link issue to
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-light">
                    <div class="mb-2">
                        <div class="modal-info">
                            You can link this issue T-{{ issue.ticketNo }} to another one.
                        </div>
                    </div>
                    <div class="mb-2">
                        <label for="iNnO7nMi" class="form-label">
                            Target TicketNo <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" id="iNnO7nMi" placeholder="e.i T-2025001"
                               value="{{ issue.linkToTicket }}"
                               name="iNnO7nMi"
                               autofocus
                               {{ issue.linkToTicket ? '' : 'required' }}>
                        <small class="text-secondary">
                            Each issue can only once be linked.
                        </small>
                    </div>

                    {% if issue.linkToTicket %}
                        <div class="mb-3">
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="c1z3n6t4" name="c1z3n6t4">
                                <label class="form-check-label text-secondary" for="c1z3n6t4">
                                    Remove linked issue
                                </label>
                            </div>
                        </div>
                    {% endif %}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-primary">Save change</button>
                    <input type="hidden" name="pid" value="{{ issue.project.id }}">
                </div>
            </div>
        </form>
    </div>
</div>