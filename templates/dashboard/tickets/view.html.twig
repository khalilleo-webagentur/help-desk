{% extends 'dashboard/layout/base.html.twig' %}

{% block title %} Dashboard :: Issue Details {% endblock %}

{% block body %}

    <div class="content-wrapper">

        <div class="content-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-8">
                        <h4 class="m-0 text-dark">Issue Details</h4>
                    </div>
                    <div class="col-4">
                        <div class="float-right">
                            <a href="{{ path('app_dashboard_tickets_index') }}" class="text-secondary">
                                Close <span class="fa fa-window-close"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            <div class="container-fluid area-section">
                <div class="row px-3 py-3">
                    <div class="col-lg-12">

                        {% if issue %}
                            <small class="text-secondary cursor-help" title="{{ issue.project.description }}">
                                {{ issue.project.title }} <span class="text-light-50">|</span>
                                T-{{ issue.ticketNo }}
                            </small>
                            <h5 class="my-3">{{ issue.title }}</h5>
                            <div class="text-secondary">
                                <p>{{ issue.description|raw }}</p>
                                <p class="mb-1"><b>Type: </b> <span>{{ issue.type.name }}</span></p>
                                <p class="mb-1"><b>Label: </b> <span>{{ issue.label.name }}</span></p>
                                <p class="mb-1"><b>Assignee: </b>
                                    <span>{{ issue.assignee ? issue.assignee.name : 'unassigned' }}</span></p>
                                <p class="mb-1"><b>Modified at: </b> <span>{{ issue.updatedAt|date }}</span></p>
                                <p><b>Created at: </b> <span>{{ issue.createdAt|date }}</span></p>
                            </div>
                        {% else %}
                            <p>Data could not be found!</p>
                        {% endif %}

                    </div>
                </div>
            </div>

            {% if count(attachments) > 0 %}
            <div class="container-fluid area-section">
                <div class="row px-3 pt-3">
                    <div class="col">
                        <h5>Attachments</h5>
                    </div>
                </div>
                <div class="row row-cols-1 row-cols-lg-6 row-cols-xl-6 g-2 px-3 pb-3">
                    {% for attachment in attachments %}
                    <div class="col">
                        <div class="py-1">
                            <form action="#">
                                <span class="fa fa-window-close text-danger pointer"></span>
                            </form>
                            <form action="{{ path('app_dashboard_ticket_helper_show', {hash: hash(attachment.filename)}) }}" method="post">
                                <img class="img-thumbnail pointer"
                                     src="{{ asset('uploads/attachment/' ~ attachment.filename) }}"
                                     alt="{{ attachment.filename }}"
                                     title="{{ attachment.filename }}"
                                     onclick="this.closest('form').submit();">

                                <input type="hidden" name="tId" value="{{ attachment.ticket.id }}">
                            </form>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            <div class="container-fluid area-section">
                <div class="row px-3 py-4">
                    <div class="col">
                        <h5>Comment</h5>
                        <div id="editor"></div>

                        <div class="my-3">
                            <button class="btn btn-warning">Submit</button>
                        </div>
                    </div>
                </div>
            </div>

            {% if count(ticketActivities) > 0 %}
                <div class="container-fluid area-section mb-5">
                    <div class="row px-3 py-3">
                        <div class="col">
                            <h5>Activities</h5>
                            <ul>
                                {% for ticketActivity in ticketActivities %}
                                    <li class="fs-14 text-secondary mb-1"
                                        style="border-bottom: 1px dashed rgba(220,220,220,0.67);">
                                        {{ ticketActivity.message|raw }}
                                        <span class="float-right">
                                                <span class="fa fa-clock text-light-50 opacity-50"></span> {{ timeAgo(ticketActivity.createdAt) }}
                                            </span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            {% endif %}

        </section>
    </div>

{% endblock %}