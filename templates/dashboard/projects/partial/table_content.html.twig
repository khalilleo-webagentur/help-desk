{% if count(projects) > 0 %}

    {% set isAdmin = is_granted('ROLE_SUPER_ADMIN') %}

    <div class="card-body table-responsive bg-white p-0 mb-3">
        <table class="table table-hover text-nowrap">
            <thead>
            <tr class="fs-14">
                {% if isAdmin %}
                    <th>ID</th>
                    <th>{{ 'Company'|trans }}</th>
                {% endif %}
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Description'|trans }}</th>
                {% if isAdmin %}
                    <th>{{ 'Updated'|trans }}</th>
                    <th>{{ 'Created'|trans }}</th>
                    <th>{{ 'Action'|trans }}</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for row in projects %}
                <tr class="fs-14">
                    {% if isAdmin %}
                        <td>{{ row.id }}</td>
                        <td>
                            <form action="{{ path('app_dashboard_project_edit', {id:row.id}) }}" method="post">
                                <input type="hidden" name="csrf" value="{{ hash(csrf_token(row.company.id)) }}">
                                <span class="text-primary pointer"
                                      onclick="this.closest('form').submit();">
                                {{ row.company.name }}
                            </span>
                            </form>
                        </td>
                    {% endif %}
                    <td>{{ row.title }}</td>
                    <td>
                        <span class="cursor-help" title="{{ row.description }}">
                            {{ row.description ? row.description|slice(0, 35) ~ '..' : '---' }}
                        </span>
                    </td>

                    {% if isAdmin %}
                        <td title="{{ row.updatedAt|date }}">{{ timeAgo(row.updatedAt) }}</td>

                        <td title="{{ row.createdAt|date }}">{{ timeAgo(row.createdAt) }}</td>

                        <td>
                            <a class="text-secondary" data-toggle="dropdown" href="#" aria-expanded="false">
                                <i class="fa fa-ellipsis-h fa-sm"></i>
                            </a>
                            <div class="dropdown-menu">
                                <form class="dropdown-item pointer"
                                      action="{{ path('app_dashboard_project_edit', {id:row.id}) }}" method="post">
                                    <input type="hidden" name="csrf" value="{{ hash(csrf_token(row.id)) }}">
                                    <span onclick="this.closest('form').submit();">
                                        <span class="fa fa-edit text-secondary fa-sm pr-2"></span>
                                        <span class="font-size-14">Edit</span>
                                    </span>
                                </form>

                                <form class="dropdown-item pointer d-none"
                                      action="{{ path('app_dashboard_project_delete', {id:row.id}) }}"
                                      method="post">
                                    <input type="hidden" name="csrf" value="{{ hash(csrf_token(row.id)) }}">
                                    <span onclick="this.closest('form').submit();">
                                        <span class="fa fa-trash text-secondary fa-sm pr-2"></span>
                                        <span class="font-size-14">Delete</span>
                                    </span>
                                </form>
                            </div>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <small>No data has been found.</small>
{% endif %}