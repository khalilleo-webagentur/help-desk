{% extends 'dashboard/layout/base.html.twig' %}

{% block title %} Dashboard :: Edit Project Details {% endblock %}

{% block body %}

    <div class="content-wrapper">

        <div class="content-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class="m-0 text-dark">Edit Project Details</h4>
                    </div>
                    <div class="col-sm-6">
                        <div class="breadcrumb float-sm-right">
                            <a href="{{ path('app_dashboard_projects_index') }}" class="text-secondary">
                                Close <span class="fa fa-window-close"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            <div class="container-fluid bg-gradient-white">

                <div class="row px-2 py-3">
                    <div class="col-lg-6">
                        <form action="{{ path('app_dashboard_project_store', {id:project.id}) }}" method="post">

                            <div class="mb-3">
                                <label for="V9xO3aD7v" class="form-label">Title <span
                                            class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="V9xO3aD7v" placeholder="Type title"
                                       value="{{ project.title }}" name="title">
                            </div>

                            <div class="mb-3">
                                <label for="2hV9xO3aD7v" class="form-label">Description <span
                                            class="text-danger">*</span></label>
                                <textarea type="text" class="form-control" id="2hV9xO3aD7v"
                                          rows="3"
                                          placeholder="Type description"
                                          name="description">{{ project.description }}</textarea>
                                <small class="text-secondary">
                                    Description must not be greater than 7 words.
                                </small>
                            </div>

                            {% include "dashboard/component/edit_save_btn.html.twig" %}

                        </form>
                    </div>
                </div>

            </div>
        </section>
    </div>

{% endblock %}