{% if count(ticketTypes) > 0 %}
    <div class="card-body table-responsive bg-white p-0 mb-3">
        <table class="table table-hover text-nowrap">
            <thead>
            <tr class="fs-14">
                <th>{{ 'Name'|trans }}</th>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <th>{{ 'Updated'|trans }}</th>
                    <th>{{ 'Created'|trans }}</th>
                    <th>{{ 'Action'|trans }}</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for row in ticketTypes %}
                <tr class="fs-14">
                    <td>{{ row.name|capitalize }}</td>

                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <td title="{{ row.updatedAt|date }}">{{ timeAgo(row.updatedAt) }}</td>

                        <td title="{{ row.createdAt|date }}">{{ timeAgo(row.createdAt) }}</td>

                        <td>
                            <div class="d-flex">
                                <form action="{{ path('app_dashboard_ticket_type_edit', {id:row.id}) }}" method="post">
                                    <button class="btn small-btn btn-secondary mr-2" type="submit">
                                        <span class="fa fa-pen fa-sm"></span>
                                    </button>
                                </form>

                                <form action="{{ path('app_dashboard_ticket_type_delete', {id:row.id}) }}" method="post">
                                    <button class="btn small-btn btn-danger" type="submit">
                                        <span class="fa fa-trash-alt fa-sm"></span>
                                    </button>
                                </form>
                            </div>
                        </td>
                    {% endif %}

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <small>No data has been found.</small>
{% endif %}