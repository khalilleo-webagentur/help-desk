{% if count(ticketStatus) > 0 %}

    {% set isAdmin = is_granted('ROLE_SUPER_ADMIN') %}

    <div class="card-body table-responsive bg-white p-0 mb-3">
        <table class="table table-hover text-nowrap">
            <thead>
            <tr class="fs-14">
                {% if isAdmin %}
                    <th>#</th>
                {% endif %}
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Description'|trans }}</th>
                <th>{{ 'Color'|trans }}</th>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <th>{{ 'Updated'|trans }}</th>
                    <th>{{ 'Created'|trans }}</th>
                    <th>{{ 'Action'|trans }}</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for row in ticketStatus %}
                <tr class="fs-14">
                    {% if isAdmin %}
                        <td>{{ row.id }}</td>
                    {% endif %}
                    <td>{{ row.name }}</td>
                    <td>{{ row.description }}</td>
                    <td>
                        <span style="color: {{ row.color }};" class="fa fa-circle"></span>
                    </td>

                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <td title="{{ row.updatedAt|date }}">{{ timeAgo(row.updatedAt) }}</td>

                        <td title="{{ row.createdAt|date }}">{{ timeAgo(row.createdAt) }}</td>

                        <td>
                            <div class="d-flex">
                                <form action="{{ path('app_dashboard_ticket_status_edit', {id:row.id}) }}" method="post">
                                    <button class="btn small-btn btn-outline-primary mr-2" type="submit">
                                        <span class="fa fa-pen fa-sm"></span>
                                    </button>
                                </form>

                                <form class="d-none" action="{{ path('app_dashboard_ticket_status_delete', {id:row.id}) }}" method="post">
                                    <button class="btn small-btn btn-outline-danger" type="submit">
                                        <span class="fa fa-trash-alt fa-sm"></span>
                                    </button>
                                </form>
                            </div>
                        </td>
                    {% endif %}

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <small>No data has been found.</small>
{% endif %}