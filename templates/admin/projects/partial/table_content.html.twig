{% if count(projects) > 0 %}
    <div class="card-body table-responsive bg-white p-0 mb-3">
        <table class="table table-hover text-nowrap">
            <thead>
            <tr class="fs-14">
                <th>#</th>
                <th>{{ 'User'|trans }}</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Description'|trans }}</th>
                <th>{{ 'Updated'|trans }}</th>
                <th>{{ 'Created'|trans }}</th>
                <th>{{ 'Action'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for row in projects %}
                <tr class="fs-14">
                    <td>{{ row.id }}</td>
                    <td>
                        <a href="{{ path('app_admin_user_edit', {id:row.user.id}) }}">
                            {{ row.user.name }}
                        </a>
                    </td>
                    <td>{{ row.title }}</td>
                    <td>{{ row.description ? row.description|slice(0, 35) ~ '..' : '---' }}</td>

                    <td title="{{ row.updatedAt|date }}">{{ timeAgo(row.updatedAt) }}</td>

                    <td title="{{ row.createdAt|date }}">{{ timeAgo(row.createdAt) }}</td>

                    <td class="d-flex">

                        <form action="{{ path('app_admin_project_edit', {id:row.id}) }}" method="post">
                            <button class="btn small-btn btn-secondary mr-2" type="submit">
                                <span class="fa fa-pen fa-sm"></span>
                            </button>
                        </form>

                        <form action="{{ path('app_admin_project_delete', {id:row.id}) }}" method="post">
                            <button class="btn small-btn btn-danger" type="submit">
                                <span class="fa fa-trash-alt fa-sm"></span>
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <small>No data has been found.</small>
{% endif %}