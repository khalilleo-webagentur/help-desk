<section class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-4 alert-fixed-z-index">
            {# warning #}
            {% if error is defined and error %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <img src="{{ asset('lte/svg/exclamation-triangle.svg') }}" alt="Warning"
                         style="margin-top: -3px;">
                    <span class="fs-15 pl-1">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                    <button type="button" class="close text-white" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endif %}

            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <img src="{{ asset('lte/svg/exclamation-triangle-danger.svg') }}" alt="Warning"
                         style="margin-top: -3px;">
                    <span class="fs-15 pl-1">{{ message }}</span>
                    <button type="button" class="close text-white" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}

            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <img src="{{ asset('lte/svg/exclamation-triangle.svg') }}" alt="Warning"
                         style="margin-top: -3px;">
                    <span class="fs-15 pl-1">{{ message }}</span>
                    <button type="button" class="close text-white" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}

            {# notice #}
            {% for message in app.flashes('notice') %}
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <img src="{{ asset('lte/svg/exclamation-circle.svg') }}" alt="Warning"
                         style="margin-top: -3px;">
                    <span class="fs-15 pl-1">{{ message }}</span>
                    <button type="button" class="close text-white" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}

            {# success #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <img src="{{ asset('lte/svg/check2-circle.svg') }}" alt="Warning"
                         style="margin-top: -3px;">
                    <span class="fs-15 pl-1">{{ message }}</span>
                    <button type="button" class="close text-white" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}

        </div>
    </div>
</section>