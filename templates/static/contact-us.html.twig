{% extends 'layout/base.html.twig' %}

{% block title %} Contact Us {% endblock %}

{% block body %}

    {% include 'layout/navbar.html.twig' %}

    {% include 'component/custom_type_message_top_fixed.html.twig' %}

    {% include 'component/breadcrumb.html.twig' with{page: 'Contact us'} %}

    <header class="container" style="padding-bottom: 180px;">
        <div class="px-lg-5 pb-5">

            <div class="row mt-5 pt-lg-5 pb-3">
                <div class="col text-center">
                    <h1 class="d-color font-weight-bold">
                        Contact Us
                    </h1>

                    <p class="text-secondary">
                        Feel free to contact us. We will make a Response within 3 days.
                    </p>
                </div>
            </div>

            <div class="row gx-4 gx-lg-5 h-100 justify-content-center py-3">
                <div class="col-lg-6 pb-3">

                    <div class="row row-cols-1 row-cols-md-1 g-3">
                        <div class="col mt-4">
                            <div class="card bg-light text-center d-border">
                                <div class="card-body py-4">
                                    <h5 class="card-title text-secondary pb-2">Phone</h5>
                                    <a href="tel:{{ phoneNumber }}" class="text-decoration-none">
                                        <p class="card-text text-secondary">
                                            <span class="bi bi-phone me-2 d-color"></span> {{ phoneNumber }}
                                        </p>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card bg-light text-center d-border">
                                <div class="card-body py-4">
                                    <h5 class="card-title text-secondary pb-2">Email</h5>
                                    <a href="mailto:{{ email }}" class="text-decoration-none">
                                        <p class="card-text text-secondary">
                                            <span class="bi bi-envelope me-2 d-color"></span> {{ email }}
                                        </p>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card bg-light text-center d-border">
                                <div class="card-body py-4">
                                    <h5 class="card-title text-secondary pb-2">Address</h5>
                                    <p class="card-text text-secondary">
                                        <span class="bi bi-pin-map-fill me-2 d-color"></span>
                                        {{ address }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-6">
                    <form action="{{ path('app_contact_us_new') }}" method="post" class="px-2">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="mb-3 mt-1">
                            <input type="text" class="form-control" id="iName" placeholder="Name *"
                                   required name="iName" style="height: 46px; border-radius: 0;">
                        </div>

                        <div class="mb-3">
                            <input type="email" class="form-control" id="iEmail" placeholder="Email *"
                                   required name="iEmail" style="height: 46px; border-radius: 0;">
                        </div>

                        <div class="mb-3">
                            <input type="text" class="form-control" id="iSubject" placeholder="Subject *"
                                   required name="iSubject" style="height: 46px; border-radius: 0;">
                        </div>

                        <div class="mb-4">
                        <textarea class="form-control" id="iMessage" rows="5" name="iMessage"
                                  style="border-radius: 0;"
                                  spellcheck="false"
                                  ondragstart="return false"
                                  ondrop="return false"
                                  dir="auto"
                                  autocapitalize="off"
                                  autocomplete="off"
                                  translate="no"
                                  placeholder="Message *"></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary" type="submit"
                                    style="height: 46px;">Send Message
                            </button>
                        </div>

                        <div class="my-3">
                            <small class="text-secondary" style="font-size: 13px;">
                                <span class="bi bi-info-circle pe-1"></span> By submitting this form, you agree to our
                                <a href="{{ path('app_legal_privacy_policy') }}"
                                   class="text-decoration-none"
                                   rel="nofollow">Privacy
                                    Policy</a>.
                            </small>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </header>

    {% include 'layout/footer.html.twig' %}

{% endblock %}