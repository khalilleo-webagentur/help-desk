{% extends 'mails/layout/base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    {% include 'mails/layout/header.html.twig' %}

    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="body">
        <tr>
            <td></td>
            <td class="container">
                <div class="content">

                    <table role="presentation" class="main">

                        <tr>
                            <td class="wrapper">
                                <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td>
                                            <p>Greetings {{ username|capitalize }},</p>

                                            <p>Our system has detected that the issue titled '{{ issueTitle }}' is being
                                                closed.</p>

                                            <table role="presentation" border="0" cellpadding="0" cellspacing="0"
                                                   class="btn btn-primary">
                                                <tbody>
                                                <tr>
                                                    <td align="left">
                                                        <table role="presentation" border="0" cellpadding="0"
                                                               cellspacing="0">
                                                            <tbody>
                                                            <tr>
                                                                <td>
                                                                    <a href="{{ absolute_url(path('app_auth')) }}"
                                                                       target="_blank">Login</a>
                                                                </td>
                                                            </tr>
                                                            </tbody>
                                                        </table>
                                                    </td>
                                                </tr>
                                                </tbody>
                                            </table>

                                            <p>
                                                If you do not wish to receive these notifications, you can deactivate
                                                them under the settings on the Dashboard at any time.
                                            </p>

                                            <p>Kind Regards, <br> The {{ appName() }} Team</p>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>

                    </table>

                    {% include 'mails/layout/footer.html.twig' %}
                </div>
            </td>
            <td></td>
        </tr>
    </table>

{% endblock %}