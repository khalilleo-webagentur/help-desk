{% extends 'mails/layout/base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    {% include 'mails/layout/header.html.twig' %}

    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="body">
        <tr>
            <td></td>
            <td class="container">
                <div class="content">

                    <table role="presentation" class="main">

                        <tr>
                            <td class="wrapper">
                                <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td>
                                            <p>Greetings {{ username|capitalize }},</p>

                                            <p>
                                                You have requested to update your email on {{ appName() }}. Please
                                                verify your new email address.
                                            </p>

                                            <table role="presentation" border="0" cellpadding="0" cellspacing="0"
                                                   class="btn btn-primary">
                                                <tbody>
                                                <tr>
                                                    <td align="left">
                                                        <table role="presentation" border="0" cellpadding="0"
                                                               cellspacing="0">
                                                            <tbody>
                                                            <tr>
                                                                <td>
                                                                    <a href="{{ absolute_url(path('app_profile_personal_data_email_verify', {token:token})) }}"
                                                                       target="_blank">Verify Email</a>
                                                                </td>
                                                            </tr>
                                                            </tbody>
                                                        </table>
                                                    </td>
                                                </tr>
                                                </tbody>
                                            </table>

                                            <p>You can also confirm your email by clicking the following link:
                                                <a href="{{ absolute_url(path('app_profile_personal_data_email_verify', {token:token})) }}"
                                                   target="_blank">
                                                    {{ absolute_url(path('app_profile_personal_data_email_verify', {token:token})) }}
                                                </a>. <br> This link will expire in 30 minutes.
                                            </p>

                                            <p>If you did not request this, please ignore this email. Someone may have
                                                accidentally entered your email address.</p>

                                            <p>Kind Regards, <br> The {{ appName() }} Team</p>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>

                    </table>

                    {% include 'mails/layout/footer.html.twig' %}
                </div>
            </td>
            <td></td>
        </tr>
    </table>

{% endblock %}